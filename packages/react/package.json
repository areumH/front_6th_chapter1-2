{
  "name": "@hanghae-plus/react",
  "version": "0.0.1",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client/index.ts",
      "import": "./src/client/index.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint:fix": "eslint --fix",
    "prettier:write": "prettier --write ./src",
    "preview": "vite preview",
    "test": "vitest",
    "test:basic": "vitest basic",
    "test:advanced": "vitest advanced",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "npx playwright show-report",
    "test:generate": "playwright codegen localhost:5173",
    "gh-pages": "pnpm run build && gh-pages -d dist"
  },
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/plugin-transform-react-jsx": "latest",
    "@eslint/js": "^9.16.0",
    "@playwright/test": "latest",
    "@testing-library/dom": "latest",
    "@testing-library/jest-dom": "latest",
    "@testing-library/user-event": "latest",
    "@types/node": "^24.0.13",
    "@vitejs/plugin-react": "latest",
    "@vitest/coverage-v8": "latest",
    "@vitest/ui": "latest",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "jsdom": "latest",
    "prettier": "^3.4.2",
    "typescript": "^5.8.3",
    "vite": "npm:rolldown-vite@latest",
    "vitest": "latest"
  }
}
